<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Chat with AI via OpenRouter</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      padding: 20px;
      max-width: 600px;
      margin: auto;
    }
    #response {
      white-space: pre-wrap;
      background: #f4f4f4;
      padding: 10px;
      margin-top: 10px;
      border-radius: 5px;
    }
  </style>
</head>
<body>
  <h1>Ask AI (via OpenRouter)</h1>
  <form id="chatForm">
    <input type="text" id="prompt" placeholder="Enter your question" style="width: 100%; padding: 10px;" required>
    <button type="submit" style="margin-top: 10px;">Send</button>
  </form>
  <div id="response"></div>

  <script>
    const form = document.getElementById("chatForm");
    const responseDiv = document.getElementById("response");

    form.addEventListener("submit", async (e) => {
      e.preventDefault();
      const prompt = document.getElementById("prompt").value;

      responseDiv.textContent = "Waiting for AI response...";

      const res = await fetch("/openrouter", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ prompt })
      });

      const data = await res.json();
      responseDiv.textContent = data.choices?.[0]?.message?.content || "No response from AI.";
    });
  </script>
</body>
</html>
